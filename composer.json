{
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "package",
      "package": {
        "type": "webroot",
        "name": "wordpress/wordpress",
        "version": "4.8.1",
        "dist": {
          "url": "https://github.com/WordPress/WordPress/archive/4.8.1.zip",
          "type": "zip"
        },
        "require": {
          "fancyguy/webroot-installer": "1.0.0"
        }
      }
    }
  ],
  "require": {
    "wordpress/wordpress": "4.8.1",
    "wpackagist-theme/twentysixteen": "*",
    "wpackagist-plugin/wordpress-seo": "*",
    "wpackagist-plugin/show-current-template": "*",
    "wpackagist-plugin/pods": "^2.6",
    "wpackagist-plugin/piklist": "^0.9.9.12",
    "wpackagist-plugin/kint-debugger": "^1.2",
    "wpackagist-plugin/custom-field-suite": "^2.5.10"
  },
  "extra": {
    "webroot-dir": "wp/",
    "webroot-package": "wordpress/wordpress",
    "installer-paths": {
      "app/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "app/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    }
  }
}
